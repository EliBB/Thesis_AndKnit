        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.App.Headline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/videos" />


        <TextView
            style="@style/TextAppearance.App.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/cast_on" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextAppearance.App.Overline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cast_on_description" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2">

            <!-- Basic Cast on -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basic_cast_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
