                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- K2tog -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/k2tog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/K2TOG"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/K2TOG_description"
                        android:textAppearance="@style/TextAppearance.App.Subtitle2"
                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Bind off techniques -->
        <TextView
            style="@style/TextAppearance.App.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/bind_off" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextAppearance.App.Overline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bind_off_description" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2">

            <!-- Bind off -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basic_bind_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_bind_off"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/basic_bind_off_description"
                        android:textAppearance="@style/TextAppearance.App.Subtitle2"
                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Italian bind off -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/italian_bind_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/italian_bind_off"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/italian_bind_off_description"
                        android:textAppearance="@style/TextAppearance.App.Subtitle2"
                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </GridLayout>


        <!-- Short Rows -->
        <TextView
            style="@style/TextAppearance.App.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/short_rows" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextAppearance.App.Overline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/short_rows_description" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2">

            <!-- German Short Rows -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/german_short_rows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
