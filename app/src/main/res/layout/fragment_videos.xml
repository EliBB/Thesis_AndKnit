            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2">

            <!-- M1R -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/m_one_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m1r"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/m1r_description"
                        android:textAppearance="@style/TextAppearance.App.Subtitle2"
                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- M1L -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/m_one_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

