                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:src="@drawable/icon_video_library"
                        app:tint="@color/secondary_color_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sew_elastic"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/sew_elastic_description"
                        android:textAppearance="@style/TextAppearance.App.Subtitle2"
                        android:textColor="@color/secondary_color_700" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weave in ends -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weave_in_ends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:strokeColor="@color/secondary_color_200"
