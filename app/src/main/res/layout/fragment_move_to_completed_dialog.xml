<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialogs.UpdateYarnAfterCompletionDialogFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/actionbar" />

    <TextView
        android:id="@+id/move_fragment_view_no_yarn"
        style="@style/TextAppearance.App.Headline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/no_yarn_in_project"
        android:textColor="@color/secondary_color_500"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/move_yarn_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/btn_confirm_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        android:text="@string/move_to_completed"/>

</LinearLayout>