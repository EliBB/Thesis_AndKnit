<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary_color_500</item>
        <item name="colorPrimaryVariant">@color/primary_color_500</item>
        <item name="colorOnPrimary">@color/primary_color_500</item>
        <item name="colorSecondary">@color/secondary_color_100</item>
        <item name="colorSecondaryVariant">@color/secondary_color_700</item>
        <item name="colorOnSecondary">@color/secondary_color_900</item>
        <item name="colorAccent">@color/secondary_color_900</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/secondary_color_50</item>
        <item name="colorSurface">@color/secondary_color_50</item>
        <item name="colorOnSurface">@color/primary_color_900</item>
        <item name="android:colorBackground">@color/secondary_color_50</item>
        <item name="android:statusBarColor">@color/secondary_color_600</item>
        <item name="android:navigationBarColor">@color/secondary_color_600</item>
        <item name="colorOnBackground">@color/secondary_color_100</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>

        <!-- Input fields -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!-- Dropdown menu -->
        <item name="dropDownListViewStyle">@style/DropDownMenu</item>

        <!-- Card view -->
        <item name="materialCardViewStyle">@style/AppCard</item>

        <!-- Navigation menu -->
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>

        <!-- Top bar -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <!-- Progress bar -->
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator
        </item>

        <!-- Tab section -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>

        <!-- Floating action buttons -->
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.ExtendedFloatingActionButton
        </item>

        <item name="floatingActionButtonStyle">
            @style/Widget.App.FloatingActionButton
        </item>

        <!-- Divider -->
        <item name="materialDividerStyle">@style/Widget.App.MaterialDivider</item>

        <!-- Chip-->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <!-- Typography -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">40sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textColor">@color/secondary_color_900</item>

        <item name="android:spacing">0dp</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/secondary_color_900</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:spacing">0.25dp</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary_color_900</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:spacing">0.25dp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_color_900</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_color_900</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:spacing">0.5dp</item>
    </style>

    <style name="TextAppearance.App.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/secondary_color_700</item>
        <item name="android:spacing">1.5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="android:spacing">1.25dp</item>
    </style>

    <!-- Shapes -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color_500</item>
        <item name="android:textColor">@color/secondary_color_50</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color_500</item>
        <item name="android:textColor">@color/secondary_color_50</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color_200</item>
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/primary_color_900</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_color_500</item>
        <item name="android:textColor">@color/primary_color_500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- FABs -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="elevation">15dp</item>
        <item name="dividerInsetStart">15dp</item>
        <item name="dividerInsetEnd">15dp</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="backgroundTint">@color/primary_color_200</item>
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/primary_color_900</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">15dp</item>
        <item name="dividerInsetStart">15dp</item>
        <item name="dividerInsetEnd">15dp</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="backgroundTint">@color/primary_color_200</item>
        <item name="android:textColor">@color/primary_color_900</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/primary_color_900</item>
    </style>

    <!-- Input fields -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color_700</item>
        <item name="hintTextColor">@color/secondary_color_800</item>
        <item name="errorTextColor">@color/error</item>
        <item name="textInputStyle">@color/secondary_color_900</item>
        <item name="paddingStart">15dp</item>
        <item name="paddingEnd">15dp</item>
        <item name="editTextStyle">@color/secondary_color_900</item>
    </style>

    <!-- Dropdown menus -->
    <style name="DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primary_color_700</item>
        <item name="hintTextColor">@color/secondary_color_800</item>
        <item name="textInputStyle">@color/primary_color_900</item>
        <item name="paddingStart">15dp</item>
        <item name="paddingEnd">15dp</item>
    </style>

    <!-- Cards -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!-- Navigation bar -->
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/secondary_color_50</item>
        <item name="itemTextColor">@color/primary_color_900</item>
        <item name="itemIconTint">@color/primary_color_900</item>
    </style>

    <!-- Action bar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline3</item>
    </style>

    <!-- Progress bar -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary_color_800</item>
        <item name="trackThickness">10dp</item>
        <item name="indicatorSize">56dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Tab section -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Subtitle1</item>
        <item name="tabTextColor">@color/primary_color_300</item>
        <item name="tabIndicatorColor">@color/primary_color_900</item>
        <item name="tabSelectedTextAppearance">@style/TextAppearance.App.Subtitle1</item>
        <item name="tabSelectedTextColor">@color/primary_color_900</item>
    </style>

    <!-- Divider -->
    <style name="Widget.App.MaterialDivider" parent="Widget.MaterialComponents.MaterialDivider"></style>

    <!-- Chip-->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/background_chip</item>
        <item name="android:textColor">@drawable/text_chip</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>